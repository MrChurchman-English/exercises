    <script>
        let checked = false;

        function normalizeAnswer(answer) {
            return answer.toLowerCase().trim();
        }

        function checkAnswers() {
            if (checked) return;
            
            let correct = 0;
            let total = 14;
            
            const questions = document.querySelectorAll('.question');
            
            questions.forEach((question, index) => {
                const qNum = index + 1;
                const input = document.getElementById('q' + qNum);
                const feedback = document.getElementById('feedback' + qNum);
                const correctAnswers = question.getAttribute('data-answer').split('|');
                const userAnswer = normalizeAnswer(input.value);
                
                if (userAnswer === '') {
                    feedback.textContent = '⚠ Please enter an answer';
                    feedback.className = 'feedback incorrect-feedback';
                    return;
                }
                
                if (correctAnswers.includes(userAnswer)) {
                    input.className = 'correct';
                    feedback.textContent = '✓ Correct!';
                    feedback.className = 'feedback correct-feedback';
                    correct++;
                } else {
                    input.className = 'incorrect';
                    const displayAnswer = correctAnswers.length > 1 
                        ? correctAnswers.join(' or ') 
                        : correctAnswers[0];
                    feedback.textContent = `✗ Incorrect. The correct answer is: ${displayAnswer}`;
                    feedback.className = 'feedback incorrect-feedback';
                }
                
                input.disabled = true;
            });
            
            const percentage = Math.round((correct / total) * 100);
            const scoreDiv = document.getElementById('score');
            scoreDiv.textContent = `Your Score: ${correct}/${total} (${percentage}%)`;
            scoreDiv.className = 'score show';
            
            checked = true;
        }

        function resetQuiz() {
            checked = false;
            
            for (let i = 1; i <= 14; i++) {
                const input = document.getElementById('q' + i);
                const feedback = document.getElementById('feedback' + i);
                
                input.value = '';
                input.className = '';
                input.disabled = false;
                feedback.textContent = '';
                feedback.className = 'feedback';
            }
            
            const scoreDiv = document.getElementById('score');
            scoreDiv.className = 'score';
        }
    </script>
